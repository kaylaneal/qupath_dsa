<?xml version = "1.0" encoding = "UTF-8"?>
<executable>

    <category>QuPath DSA</category>
    <title>QuPath</title>
    <description>Run QuPath scripts through the DSA</description>
    <version>0.1.0</version>

    <parameters>

        <label>IO</label>
        <description>Input/Output Parameters</description>

        <image>
            <name>inputImageFile</name>
            <label>Input Image</label>
            <description>Input image</description>
            <index>0</index>
            <channel>input</channel>
        </image>

        <file fileExtensions=".groovy">
            <name>inputGroovyFile</name>
            <label>Groovy File</label>
            <channel>input</channel>
            <index>1</index>
            <description>Groovy script file</description>
        </file>

        <file fileExtensions=".json">
            <name>inputModelFile</name>
            <label>Model</label>
            <channel>input</channel>
            <index>2</index>
            <description>json file describing the model to use</description>
        </file>

        <region>
            <name>analysis_roi</name>
            <label>Analysis ROI</label>
            <description>Region of Interest (ROI) for analysis. Must be a 4 element vector in the format: (left, top, width, height). Default value is the entire image.</description>
            <longflag>analysis_roi</longflag>
            <default>-1,-1,-1,-1</default>
        </region>

        <file fileExtensions=".json" reference="inputImageFile">
            <name>outputAnnotationFile</name>
            <label>Image Annotation File</label>
            <description>Annotation to relate the image to the source (*.json)</description>
            <channel>output</channel>
            <longflag>outputAnnotationFile</longflag>
        </file>
<!--
        <image>
            <name>outputImageFile</name>
            <label>Output Image File</label>
            <channel>output</channel>
            <description>Output Image</description>
            <longflag>outputImageFile</longflag>
            <flag>oif</flag>
        </image>
-->
    </parameters>

</executable>